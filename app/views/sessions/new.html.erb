<% provide(:title, "登录") %>
<h1 style="font-size: 30px">用户登录</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3" style="margin-left: 430px; width: 300px">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :email ,"邮箱"%>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password , "密码"%>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>记住密码</span>
      <% end %>

      <%= f.submit "立即登录", class: "btn btn-primary" %>
    <% end %>

    <p>忘记密码？ <%= link_to "找回密码", index_path %></p>
    <p>您是新用户？ <%= link_to "立即注册", signup_path %></p>
  </div>
</div>
